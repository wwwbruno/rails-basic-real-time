<h1>Listing athletes</h1>

<table ng-app="disvolvi">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody ng-controller="SportsController as sport">
      <tr ng-repeat="athlete in athletes">
        <td>{{ athlete.name }}</td>
        <td>{{ athlete.email }}</td>
        <td>{{ athlete.category }}</td>
      </tr>
  </tbody>
</table>

<br>

